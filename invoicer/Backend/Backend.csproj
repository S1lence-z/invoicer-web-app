    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>d69d3d1d-5ee0-4a30-b250-6df43ce8d43a</UserSecretsId>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
  </PropertyGroup>

  <ItemGroup>
